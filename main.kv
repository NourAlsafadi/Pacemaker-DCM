<RowAOO>:
    spacing: 50
    size_hint_x: 1
    value: value
    name: name

    Label:
        id: name
        text: root.txt
        size_hint_x: 1
        font_size: 15

    Spinner:       
        id: value
        text: '1'#root.getNominal()
        disabled: not CheckBox.active
        values: '1' #root.getValues()
    
    CheckBox:
        id:CheckBox 
        text: 'CheckBox'
        active: False
        size_hint_x: 0.75

